<header id="header">
    <div class="primary-header">
        <div class="row">
            <div class="columns">
                <a id="blog-logo" href="{{@blog.url}}">
                    {{#if @blog.logo}}
                        <img src="{{@blog.logo}}" alt="{{@blog.title}}" height="100" />
                    {{else}}
                        <h1>{{@blog.title}}</h1>
                        <br><span class="page-description">{{@blog.description}}</span>
                    {{/if}}
                </a>
                <ul class="no-bullet social-media clearfix">
                  <li class="nd-social-wechat">
                    <a class="weixin" href="javascript:"><i class="fa fa-wechat fa-lg"></i></a>
-                    </li>
                  <li class="nd-social-facebook">
-                        <a target="_blank" href="{{facebook_url}}"><i class="fa fa-facebook fa-lg"></i></a>
-                    </li>
                    <li class="nd-social-twitter">
                        <a target="_blank" href="{{twitter_url}}"><i class="fa fa-twitter fa-lg"></i></a>
                    </li>
                    <li class="nd-social-linkedin">
                        <a target="_blank" href="https://www.linkedin.com/in/yongqian/"><i class="fa fa-linkedin fa-lg"></i></a>
                    </li>
                    <li class="nd-social-instagram">
                        <a target="_blank" href="https://www.instagram.com/brucebot"><i class="fa fa-instagram fa-lg"></i></a>
                    </li>
                    <li class="nd-social-github">
                        <a target="_blank" href="https://github.com/brucebot"><i class="fa fa-github fa-lg"></i></a>
                    </li>
                    <li class="nd-social-rss">
                        <a target="_blank" href="https://qianyong.me/rss/"><i class="fa fa-rss fa-lg"></i></a>
                    </li>
                </ul>
                <div class="header-search">
                    <form method="get" class="search-form form-inline" action="#">
                        <div class="input-group">
                            <input id="search-field" type="search" class="search-field input-group-field" placeholder="搜索本站" value="" name="s" title="Search for:">
                            <div class="input-group-button">
                                <button class="button transparent search-submit-icon">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>
